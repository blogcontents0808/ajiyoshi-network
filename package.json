{
  "name": "ajiyoshi-network",
  "version": "1.0.0",
  "description": "味美ネットワーク公式サイト - 静的サイト + 自動同期システム",
  "scripts": {
    "studio": "cd vibe-blog-by-sanity/app && sanity dev --port 3333",
    "studio:build": "cd vibe-blog-by-sanity/app && sanity build",
    "studio:deploy": "cd vibe-blog-by-sanity/app && sanity deploy",
    "sync:new": "node sync-new-posts.js",
    "sync:blog": "node auto-sync-system.js",
    "sync:schedule": "node -e \"require('./auto-sync-system').setupScheduledSync(); console.log('定期同期開始...'); process.stdin.resume();\""
  },
  "dependencies": {
    "@sanity/client": "^6.4.11",
    "@sanity/image-url": "^1.0.2",
    "@sanity/vision": "^3.15.1",
    "sanity": "^3.15.1",
    "node-cron": "^3.0.3"
  }
}